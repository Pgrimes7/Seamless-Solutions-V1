@page
@model Lab1484.Pages.DashBoardModel
@{
	<h1>OrgGrant DashBoard and Display</h1>
	<br />
    <h2>Product View</h2>
    <table class="table table-bordered table-responsive table-hover">
        <thead>
            <tr>
                <th>Project ID:</th> <!-- Creates column headers-->
                <th>Project Name:</th>
                <th>Date Due:</th>
                <th>Date Created:</th>
                <th>Date Completed</th>
                <th>Admin Name</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var prod in Model.ProjectList)
                {
                    <tr>
                        <td class="text-danger">@prod.ProjectID</td><!-- invoke data from model-->
                        <td>@prod.ProjectName</td>
                        <td>@prod.DateDue</td>
                        <td>@prod.DateCreated</td>
                        <td>@prod.DateCompleted</td>
                        <td>@prod.AdminName</td>
                    </tr>
                }
            }
        </tbody>
    </table>

}
