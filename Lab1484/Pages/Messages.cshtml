@page
@model Lab1484.Pages.MessagesModel
@{
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lab1484 - Messages</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/css/style.css" rel="stylesheet">
    <style>
        .action-btn {
            background-color: #450084;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            margin-bottom: 10px;
            display: inline-block;
            margin-right: 10px;
        }

            .action-btn:hover {
                background-color: #360067;
                color: white;
            }
    </style>
</head>

<body>
    <main class="container">
        <h1>Inbox</h1>

        <!-- Buttons -->
        <a asp-page="NewMessage" class="action-btn">
            <i class="fa-solid fa-plus"></i> New Message
        </a>

        <a asp-page="SentMessage" class="action-btn">
            <i class="fa-solid fa-paper-plane"></i> Sent Messages
        </a>

        <p class="mt-3">You have <strong>@Model.UnreadMessagesCount</strong> unread messages.</p>

        <table class="table table-striped table-bordered mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Sender</th>
                    <th>Message</th>
                    <th>Date Sent</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var message in Model.Messages.Where(m => m.Receiver == Model.currentUser))
                {
                    <tr>
                        <td>
                            <form method="post" asp-page-handler="MarkAsRead">
                                <input type="hidden" name="messageId" value="@message.MessageId" />
                                <button type="submit" style="background:none;border:none;padding:0;color:#450084;cursor:pointer;">
                                    @message.Sender
                                </button>
                            </form>
                        </td>
                        <td>@message.Content</td>
                        <td>@message.SentDate.ToString("g")</td>
                    </tr>
                }
            </tbody>

        </table>
    </main>
</body>
</html>

