@page
@model Lab1484.Pages.MessagesModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lab1484</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/4ccc3672e0.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #F8F9FA;
        }

        .chat-container {
            display: flex;
            height: 100vh;
        }

        .chat-list {
            width: 30%;
            border-right: 1px solid #ccc;
            overflow-y: auto;
            padding: 10px;
        }

            .chat-list ul {
                list-style: none;
                padding: 0;
            }

            .chat-list li {
                padding: 10px;
                border-bottom: 1px solid #ccc;
                cursor: pointer;
                display: flex;
                align-items: center;
            }

                .chat-list li:hover {
                    background-color: #f5f5f5;
                }

        .message-info {
            display: flex;
            align-items: center;
            width: 100%;
        }

        .profile-pic {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .message-text {
            flex-grow: 1;
        }

        .sender {
            font-weight: bold;
            display: block;
        }

        .message-preview {
            color: #6c757d;
        }

        .date {
            margin-left: auto;
            white-space: nowrap;
        }

        .chat-messages {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 10px;
        }

        .chat-header {
            border-bottom: 1px solid #ccc;
            padding-bottom: 10px;
            margin-bottom: 10px;
        }

        .chat-message {
            display: flex;
            align-items: flex-start;
            margin-bottom: 10px;
        }

            .chat-message.user {
                flex-direction: row-reverse;
            }

            .chat-message p {
                background-color: #e9ecef;
                border-radius: 10px;
                padding: 10px;
                max-width: 70%;
            }

            .chat-message.user p {
                background-color: #B599CE;
            }

        .chat-input {
            display: flex;
            align-items: center;
        }

            .chat-input input {
                flex: 1;
                border: none;
                padding: 10px;
                border-radius: 10px;
                margin-right: 10px;
            }

            .chat-input button {
                background-color: #450084;
                border: none;
                color: #fff;
                border-radius: 10px;
                padding: 10px 20px;
            }

        .search-bar {
            padding: 10px;
            border-bottom: 1px solid #ccc;
        }

        .btn-new-message {
            background-color: #450084;
            border: 2px solid #450084;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            text-align: center;
            font-size: 16px;
            margin-bottom: 10px;
        }

            .btn-new-message:hover {
                background-color: #360067;
                border-color: #360067;
            }
    </style>
</head>


<body>
    <!-- Chat Section -->
    <div class="col chat-container">
        <div class="chat-list">
            <button type="button" class="btn-new-message">
                <i class="fa-solid fa-plus"></i> New Message
            </button>
            <div class="search-bar">
                <input type="search" class="form-control" placeholder="Search users" aria-label="Search users" />
            </div>
            <ul>
                <li onclick="showChat(1)">
                    <div class="message-info">
                        <img src="https://randomuser.me/api/portraits/men/1.jpg" alt="Cameron Williamson" class="profile-pic">
                        <div class="message-text">
                            <span class="sender">Cameron Williamson</span>
                            <div class="message-preview">Can we finalize the grant report?</div>
                        </div>
                        <span class="date">14:32</span>
                    </div>
                </li>
                <li onclick="showChat(2)">
                    <div class="message-info">
                        <img src="https://randomuser.me/api/portraits/women/2.jpg" alt="Arlene McCoy" class="profile-pic">
                        <div class="message-text">
                            <span class="sender">Arlene McCoy</span>
                            <div class="message-preview">I'll send the budget breakdown...</div>
                        </div>
                        <span class="date">12:32</span>
                    </div>
                </li>
                <li onclick="showChat(3)">
                    <div class="message-info">
                        <img src="https://randomuser.me/api/portraits/men/3.jpg" alt="Michael Johnson" class="profile-pic">
                        <div class="message-text">
                            <span class="sender">Michael Johnson</span>
                            <div class="message-preview">Reviewed the grant proposal...</div>
                        </div>
                        <span class="date">09:15</span>
                    </div>
                </li>
                <li onclick="showChat(4)">
                    <div class="message-info">
                        <img src="https://randomuser.me/api/portraits/women/4.jpg" alt="Emily Davis" class="profile-pic">
                        <div class="message-text">
                            <span class="sender">Emily Davis</span>
                            <div class="message-preview">Updates on project milestones!</div>
                        </div>
                        <span class="date">08:45</span>
                    </div>
                </li>
                <li onclick="showChat(5)">
                    <div class="message-info">
                        <img src="https://randomuser.me/api/portraits/men/5.jpg" alt="James Carter" class="profile-pic">
                        <div class="message-text">
                            <span class="sender">James Carter</span>
                            <div class="message-preview">Need your feedback on the draft...</div>
                        </div>
                        <span class="date">Yesterday</span>
                    </div>
                </li>
            </ul>
        </div>
        <div class="chat-messages">
            <div class="chat-header">
                <h3 id="chat-with">Cameron</h3>
            </div>
            <div class="chat-content">
                <div class="chat-message">
                    <p>What do you mean?</p>
                </div>
                <div class="chat-message user">
                    <p>I think the idea that things are changing isn't good</p>
                </div>
            </div>
            <div class="chat-input">
                <input type="text" placeholder="Type a message">
                <button type="button">Send</button>
            </div>
        </div>
    </div>
    </div>
    </div>

    <script>
        function showChat(id) {
            var chatWith = document.getElementById('chat-with');
            var chatContent = document.querySelector('.chat-content');

            switch (id) {
                case 1:
                    chatWith.innerText = 'Cameron Williamson';
                    chatContent.innerHTML = `
                        <div class="chat-message">
                            <p>Can we finalize the grant report?</p>
                        </div>
                        <div class="chat-message user">
                            <p>Sure, let's discuss the pending items.</p>
                        </div>
                        <div class="chat-message">
                            <p>And can we get a copy?</p>
                        </div>
                        <div class="chat-message user">
                            <p>Yeah, of course!</p>
                        </div>`
                        ;
                    break;
                case 2:
                    chatWith.innerText = 'Arlene McCoy';
                    chatContent.innerHTML = `
                        <div class="chat-message">
                            <p>I'll send the budget breakdown shortly.</p>
                        </div>`;
                    break;
                case 3:
                    chatWith.innerText = 'Michael Johnson';
                    chatContent.innerHTML = `
                        <div class="chat-message">
                            <p>I've reviewed the grant proposal. Looks solid.</p>
                        </div>`;
                    break;
                case 4:
                    chatWith.innerText = 'Emily Davis';
                    chatContent.innerHTML = `
                        <div class="chat-message">
                            <p>Here are the updated project milestones.</p>
                        </div>`;
                    break;
                case 5:
                    chatWith.innerText = 'James Carter';
                    chatContent.innerHTML = `
                        <div class="chat-message">
                            <p>Can you provide feedback on the draft?</p>
                        </div>`;
                    break;
            }
        }
    </script>
</body>
</html>

