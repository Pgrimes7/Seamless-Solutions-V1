@page
@model Lab1484.Pages.UpdatePermissionModel
@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Active Grants</title>
        <link rel="stylesheet" href="path/to/your/css/file.css">
    </head>
    <body>
        <main>
            <div style="display: flex; align-items: center; gap: 10px;">
                <h2 style="margin-right: 10px;">Active Grants</h2>
                <a class="btn btn-secondary" asp-area="" asp-page="/UpdateGrant">Update Grant</a>
                <a class="btn btn-primary" asp-area="" asp-page="/GrantCreation">Create Grant</a>
                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#addUserModal">Add User</button>
            </div>
            <table class="table table-bordered table-responsive table-hover">
                <thead>
                    <tr>
                        <th>Grant Name:</th>
                        <th>Grant Amount:</th>
                        <th>Due Date:</th>
                        <th>Faculty Name:</th>
                        <th>Grant Status:</th>
                        <th>Select</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prod in Model.GrantList)
                    {
                        var statusClass = prod.grantStatus?.ToLower() switch
                        {
                            "in progress" => "badge bg-info text-dark",
                            "opportunity" => "badge bg-primary",
                            "pending" => "badge bg-warning text-dark",
                            "approved" => "badge bg-success",
                            "rejected" => "badge bg-danger",
                            _ => "badge bg-secondary"
                        };

                        <tr>
                            <td>
                                <form method="post" asp-page-handler="SelectGrant">
                                    <input type="hidden" name="grantId" value="@prod.GrantID" />
                                    <button type="submit">Select</button>
                                </form>
                            </td>
                            <td>@prod.businessName</td>
                            <td>@prod.amount</td>
                            <td>@prod.dueDate.ToShortDateString()</td>
                            <td>@prod.facultyName</td>
                            <td><span class="@statusClass">@prod.grantStatus</span></td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (Model.UserList != null && Model.UserList.Count > 0)
            {
                <h3>Users Associated with Selected Grant</h3>
                <table class="table table-bordered table-responsive table-hover">
                    <thead>
                        <tr>
                            <th>User ID</th>
                            <th>User Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Grant Permission</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.UserList)
                        {
                            <tr>
                                <td>@user.userID</td>
                                <td>@user.firstName</td>
                                <td>@user.lastName</td>
                                <td>@user.email</td>
                                <td>@user.phone</td>
                                <td>
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#permissionModal" data-userid="@user.userID" data-grantid="@Model.SelectedGrantId">Update</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

           

            <!-- Modal for Updating Permissions -->
            <form method="post" asp-page-handler="UpdatePermission">
                <div class="modal fade" id="permissionModal" tabindex="-1" aria-labelledby="permissionModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="permissionModalLabel">Update User Permissions</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <input type="hidden" id="modalUserId" name="userId" />
                                <input type="hidden" id="modalGrantId" name="grantId" />
                                <div class="row mb-4">
                                    <div class="col">
                                        <div class="form-check">
                                            <input asp-for="viewPermission" class="form-check-input" type="checkbox" id="viewPermission">
                                            <label class="form-check-label" for="viewPermission">View Permission</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-4">
                                    <div class="col">
                                        <div class="form-check">
                                            <input asp-for="editPermission" class="form-check-input" type="checkbox" id="editPermission">
                                            <label class="form-check-label" for="editPermission">Edit Permission</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-4">
                                    <div class="col">
                                        <div class="form-check">
                                            <input asp-for="sensitiveInfoPermission" class="form-check-input" type="checkbox" id="sensitiveInfoPermission">
                                            <label class="form-check-label" for="sensitiveInfoPermission">Sensitive Information Permission</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
                        </div> <!--close modal content-->
                    </div> <!--close modal dialog-->
                </div> <!--close modal-->
            </form>

            <!-- Modal for Adding Users -->
            <form method="post" asp-page-handler="AddUser">
                <div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="addUserModalLabel">Add User to Grant</h1>
                                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <input type="hidden" name="grantId" value="@Model.SelectedGrantId" />
                                <div class="row mb-4">
                                    <div class="col">
                                        <select asp-for="userId" class="form-select" aria-label="Select User">
                                            <option value="" disabled selected>Select User</option>
                                            @foreach (var user in Model.NonGrantUserList)
                                            {
                                                <option value="@user.userID">@user.firstName @user.lastName</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary">Add User</button>
                            </div>
                        </div> <!--close modal content-->
                    </div> <!--close modal dialog-->
                </div> <!--close modal-->
            </form>

        </main>
    </body>
    </html>
    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Include Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>
        $('#permissionModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var userId = button.data('userid');
            var grantId = button.data('grantid');
            var modal = $(this);
            modal.find('#modalUserId').val(userId);
            modal.find('#modalGrantId').val(grantId);
        });
    </script>
}