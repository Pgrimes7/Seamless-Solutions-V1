<body>
    <main>
        <div class="bg-image">
            <!--set up container-->
            <div class="container">
                <!--set up row-->
                <div class="row align-items-center g-lg-5 py-5">
                    <!--set up column-->
                    <div class="col-md-10 mx-auto col-lg-5">
                        <!--login form-->
                        <form method="post" asp-page="LogIn" class="p-4 p-md-5 border rounded-3 bg-body-tertiary">
                            <h2 class="fw-bold lh-1 text-body-emphasis mb-3">Login</h2>
                            <div class="form-floating mb-3">
                                <input asp-for="Username" type="text" class="form-control" id="floatingInput" placeholder="Username" required>
                                <label for="floatingInput">Username</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password" required>
                                <label for="floatingPassword">Password</label>
                            </div>
                            <div class="checkbox mb-3">
                                <label>
                                    <input class="form-check-input me-1" type="checkbox" value="remember-me" id="firstCheckbox">
                                    Remember me
                                </label>
                            </div>
                            <button type="submit" class="w-100 btn btn-lg btn-primary">Sign in</button>
                        </form>
                    </div> <!--close col-->
                </div> <!--close row-->
            </div> <!--close container-->
        </div> <!--close bg-image-->
    </main>

    <script src="/docs/5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
